<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:background="@drawable/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />


    <EditText
        android:id="@+id/SignUp_UserName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="#EDEDED"
        android:gravity="left|center"
        android:hint="사용자 이름(3자리 이상)"
        android:inputType="text"
        android:maxLength="20"
        android:paddingLeft="20dp"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.032" />

    <EditText
        android:id="@+id/SignUp_Email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="#EDEDED"
        android:gravity="left|center"
        android:hint="이 메 일"
        android:inputType="text"
        android:maxLength="20"
        android:paddingLeft="20dp"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/SignUp_password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:autoSizeTextType="uniform"
        android:background="#EDEDED"
        android:gravity="left|center"
        android:hint="비밀번호(6자리 이상)"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingVertical="3dp"
        android:paddingLeft="20dp"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/SignUp_Email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/SignUp_Email"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_Email" />

    <EditText
        android:id="@+id/SignUp_PasswordCheck"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:autoSizeTextType="uniform"
        android:background="#EDEDED"
        android:gravity="left|center"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="20dp"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/SignUp_Email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/SignUp_Email"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_password" />

    <Button
        android:id="@+id/SignUp_DoSignUp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="112dp"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/edge_inactivated"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_PasswordCheck" />

    <Button
        android:id="@+id/SignUp_Cancel"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:background="@drawable/edge3"
        android:text="취소"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_PasswordCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>