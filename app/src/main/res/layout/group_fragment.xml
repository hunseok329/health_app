<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/GroupFragment_GroupName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="그룹명"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">
    </TextView>

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/edge_groupitem"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/GroupFragment_BoxGroupName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="그룹명"
                android:textColor="#4778ee"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <ImageButton
                android:id="@+id/roupFragment_BoxSetButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_more_horiz_24"></ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="그룹장:"
                android:textSize="15dp"></TextView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:src="@drawable/ic_baseline_home_24">

            </ImageView>

            <TextView
                android:id="@+id/GroupFragment_BoxGroupLeaderName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="그룹장명"
                android:textSize="15dp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/GroupFragment_BoxGroupMemInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center_vertical"
                android:text="현재 인원/정원"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/GroupFragment_BoxGroupTag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="그룹태그"
                android:textSize="15dp"></TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:textColor="#404040"
        android:gravity="center_vertical"
        android:text="그룹멤버"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"></TextView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupFragmnet_recycler"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"/>

</LinearLayout>