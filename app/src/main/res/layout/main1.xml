<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.5"
            android:gravity="center_vertical"
            android:text="오늘의 운동"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>

        <Button
            android:id="@+id/Main1_StartEnd_Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="2.5"
            android:background="@drawable/edge"
            android:scaleType="centerInside"
            android:text="운동 종료"></Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="5"
            android:background="@drawable/edge_groupitem"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:text="9월 11일 토요일"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:textSize="10dp"
                    android:background="@drawable/edge"
                    android:scaleType="centerInside"
                    android:layout_marginVertical="10dp"
                    android:text="운동일지"></Button>

            </LinearLayout>

            <ListView
                android:id="@+id/Main1_ListView_CompleteExercise"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="5"
                android:divider="#FFFFFF"
                android:dividerHeight="0px"></ListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="완료한 운동"
                android:textColor="#3E3E3E"
                android:textSize="10dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Main1_LinearLayout_StageExercise"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp">
            <ListView
                android:id="@+id/Main1_ListView_StageExercise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:dividerHeight="0px"
                android:divider="#FFFFFF">
            </ListView>
        </LinearLayout>

        <Button
            android:id="@+id/Main1_Button_AddExercise"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:background="@drawable/edge_activated"
            android:text="운동 추가"
            android:textColor="#ffffff"
            android:textStyle="bold"></Button>

    </LinearLayout>

</LinearLayout>